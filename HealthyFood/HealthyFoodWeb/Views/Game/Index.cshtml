@model GameIndexViewModel

<div>
    <a href="/Game/CreateGame">Create game</a>
    <a href="/Game/CreateGame">RecomendateGame</a>
</div>
<div class="games">
    <div class="cheap">
        <h1>Cheap</h1>
        @foreach (var gameViewModel in Model.CheapGames)
        {
            <div class="game">
                <div class="cover">
                    <img src="@gameViewModel.CoverUrl" />
                </div>
                Game Name @gameViewModel.Name <a href="/Game/Remove?name=@gameViewModel.Name">X</a>
            </div>
        }
    </div>
    <div class="rich">
        <h1>Rich</h1>
        @foreach (var gameViewModel in Model.RichGames)
        {
            <div class="game">
                <div class="cover">
                    <img src="@gameViewModel.CoverUrl" />
                </div>
                Game Name @gameViewModel.Name <a href="/Game/Remove?name=@gameViewModel.Name">X</a>
            </div>
        }
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/game.css" />
}