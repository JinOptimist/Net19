@using HealthyFoodWeb.Models.ModelsWiki;
@using Data.Interface.Models;
@using Data.Interface.Repositories;
@using HealthyFoodWeb.Models.ModelsWikiBAA;
@{
    Layout = "_LayoutWiki";
    <link rel="stylesheet" href="~/css/Style_Slava_BAA.css" />
}
@model List<BLockPageBaaViewModel>

<div class="container">
    <div class="header"><h1>Биологически активные добавки(БАД)</h1></div>
    <div class="sidebar">
        <p>Магазины БАДов :</p>
        <p><a href="https://gamma.by/sportpit/zdorovie/">Gamma.by</a></p>
        <p><a href="https://kakvapteke.by/catalog/bady/">Kakvapteke.by</a></p>
        <p><a href="https://sofishop.by/catalog/bady/">Sofishop.by</a></p>
    </div>

    @foreach (var pageViewModel in Model)
    {
        <div class="content">
            <div Titles><h2>@pageViewModel.Title <a href="/Wiki/Remove?id=@pageViewModel.Id">delete</a></h2></div>
            <div Texts>@pageViewModel.Text</div>
            <div class="author">
                Автор Текста: @pageViewModel.Author
            </div>
            <div>
                @foreach (var CommentS in pageViewModel.CommentText)
                {
                    <div class="Comments">
                        @CommentS
                    </div>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post">
                        <div class="text">
                            Enter Comment: <textarea name="newComment"></textarea>
                            <input type="hidden" value="@pageViewModel.Id" name="blockId">
                            <div class="button">
                                <input type="submit" value="Add comment" />
                                <input type="reset" value=" Очистить">
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    }
    <div class="footer">&copy; Крылов Вячеслав</div>
</div>
