@model WikiUserImagesViewModel

@{
	Layout = "_LayoutWiki";
	<link rel="stylesheet" href="~/css/Style_Macronutrient_Calculator.css" />
}

<div class="paginator">
    @foreach(var pageNumber in Model.PageList)
    {
        <a href="/Wiki/ShowUploadedImages?page=@pageNumber"
            class=" @(Model.ActivePageNumber == pageNumber ? "active" : "")">@pageNumber</a>
    }
</div>

<div>
    @foreach (var imageViewModel in Model.UserImages)
    {
        <div class="game">
            <div class="cover">
                <a href="/Wiki/Update/@imageViewModel.Id">
                    <img src="@imageViewModel.ImgPath" />
                </a>
            </div>
            Year @imageViewModel.Year
            Type @imageViewModel.ImgType
            Tags
            @foreach (var tag in imageViewModel.UserTags)
            {
                <span class="tag">@tag</span>
            }
        </div>
    }
</div>
