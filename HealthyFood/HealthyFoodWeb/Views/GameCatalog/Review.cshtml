@model GeneralReviewViewModel


<h1>Отзывы пользователей</h1>

@foreach (var text in Model.PagginatorViewModel.Items)
{
    <div class="one-review">
        <div class="info-user">
            @text.Author
            @if (text.CreatedGame.Count > 0)
            {
                <text>cоздатель игр: @string.Join(", ", text.CreatedGame.Take(5))</text>
                if (text.CreatedGame.Count > 5)
                {
                    <text> и др.</text>
                }
            }
            Дата: @text.Date
        </div>
        <div>@text.TextReview </div>
    </div>
}



<form method="post" action="/GameCatalog/AddReview/">

    @if (User.Identity.IsAuthenticated)
    {
        <div>
            @Html.TextAreaFor(x => x.NewReview, new { @class = "Creat-review" })
            @*   //@Model.NewReview, new { @class = "Creat-review" })*@

        </div>
        <div>
            <input type="submit" value="Написать отзыв" />
            <span class="Error">
                @Model.TextError

            </span>

        </div>
        <div>
        </div>
    }
    else
    {
        <div>
            Отзывы могут оставлять только авторизованные пользователи
        </div>
    }
</form>



@section Styles{
    <link rel="stylesheet" href="~/css/Review.css" />
}