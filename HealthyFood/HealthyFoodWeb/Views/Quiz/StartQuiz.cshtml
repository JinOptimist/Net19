@using HealthyFoodWeb.Models.Quiz
@model StartQuizViewModel

<div>
    @Model.Ques

</div>
<div>
    <form method="post" action="/Quiz/NextStep/">
        @*@Html.Hidden("numberOgQuestion", Model.Number)*@
        @for (int i = 0; i < Model.Answers.Count; i++)
        {
            <div>
                @Html.RadioButtonFor(x=>x.Number, Model.Number)
                @Model.Answers[i]
                @Model.IsItTrueAnswer[i]
                <input type="hidden" value= model.IsItTrueAnswer[i]>
            </div>

        }
        <div>
            <input type="submit" value="Продолжить" class="myButton" />
        </div>
    </form>
</div>

